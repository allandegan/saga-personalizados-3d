generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPERATOR
  VIEWER
}

model User {
  id           String   @id @default(cuid())
  name         String
  username     String   @unique
  passwordHash String
  role         Role     @default(ADMIN)
  createdAt    DateTime @default(now())
}

model Product {
  id           String   @id @default(cuid())
  name         String
  price        Float
  createdAt    DateTime @default(now())
}
